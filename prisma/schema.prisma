generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  image     String?
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   String
  analytics Analytics?
}

model Analytics {
  id               String   @id @default(uuid())
  url              String
  userAgent        String
  language         String
  referrers        String[]
  platform         String
  screenResolution String
  colorDepth       Int
  timestamp        DateTime @default(now())
  latitude         Float?
  longitude        Float?
  accuracy         Float?
  ip               String?
  cities           String[] // Array of cities
  regions          String[] // Array of regions
  countries        String[] // Array of countries
  views            Int      @default(0) // Field to count views
  project          Project  @relation(fields: [projectId], references: [id])
  projectId        String   @unique
}
